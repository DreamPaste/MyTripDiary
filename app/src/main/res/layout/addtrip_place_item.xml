<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_round_white"
    android:elevation="5dp"
    android:layout_margin="15dp"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/addtrip_map_indexView"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/addtrip_map_placeName"
        android:layout_toRightOf="@id/addtrip_map_indexView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장소"
        android:textColor="@color/black"

        android:textSize="25dp"/>
    <TextView
        android:id="@+id/addtrip_map_PlaceAdr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="주소 내용"
        android:textColor="#518535"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/addtrip_map_indexView"
        android:layout_below="@+id/addtrip_map_placeName"/>

</RelativeLayout>